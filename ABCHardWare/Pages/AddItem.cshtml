@page
@model ABCHardWare.Pages.AddItemModel
@{
}
<h2>Add New Item</h2>
<form name="AddItem" method="post">
    <table>
        <tr>
            <td>Item Code</td>
            <td>
                <input type="text" name="ItemCode" required  />
            </td>
        </tr>
        <tr>
            <td>Description</td>
            <td>
                <input type="text" name="Description" required/>
            </td>
        </tr>
        <tr>
            <td>Unit Price</td>
            <td>
                <input type="number" name="UnitPrice" required min="0" max="9999999999" step=".01" />
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" name="AddItem" value="AddItem" />
            </td>
        </tr>
        <tr>
            <td>@Model.Message</td>    
        </tr>
    </table>
</form>
