@page
@model BAIST33150ConsoleAppEmpty.Pages.ValidationDDAModelModel
@{
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Validation Using Data Anotation Attributes</title>
        <!-- 
            To bypass the client side validation 
            - comment library refrerences
            - or
            - Hard code tage, <input set property data-val="false"> the input tag is found in the view source of the page
        
            <script src="~/libraries/jquery/jquery.js"></script>
            <script src="~/libraries/jquery-validate/jquery.validate.js"></script>
            <script src="~/libraries/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        -->
    </head>
    <body>
        <form name="SampleForm" method="post">
            <table>
                <tr>
                    <td>Input Field</td>
                    <td>
                        <input asp-for="InputField" />
                        <span asp-validation-for="InputField"></span>
                    </td>
                </tr>
                 <tr>
                    <td>
                        <input type="submit" name="Submit" value="Submit" />
                    </td>
                </tr>

            </table>
        </form>
        @Model.Message
    </body>
</html>
