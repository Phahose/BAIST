@page
@model ClubBAISTGolfClub.Pages.BookTeeTimeModel
@{
    Layout = "_Header";
    ViewData["Title"] = "Book Tee Time";
}

<div class="bookTee">
    <nav class="memberhome_nav">
        <ul>
            <li>
                <a href="~/MemberHome">My Account</a>
            </li>
            <li>
                <a href="~/BookTeeTime">Tee Times</a>
            </li>
            <li>
                <a href="~/TeeTimeReservations">Reservations</a>
            </li>
            <li>
                <a href="#">Events</a>
            </li>
            <li>
                <a href="~/Admin">Admin</a>
            </li>
        </ul>
    </nav>
    <div class="infodivs">   
       <form name="TeeTimes" method="post" class="teetimeForm">
            <div class="month_form">
                <select id="menu" name="Month" class="month_input">
                    <option value="#">@Model.MonthName</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                </select>

                <input type="submit" name="Go" value="Go" />
            </div>
            <table border="1" class="bookingtable">
                <tr>
                    <th>Sun</th>
                    <th>Mon</th>
                    <th>Tue</th>
                    <th>Wed</th>
                    <th>Thu</th>
                    <th>Fri</th>
                    <th>Sat</th>
                </tr>
                @for (int row = 0; row < 6; row++)
                {
                    <tr>
                        @for (int col = 0; col < 7; col++)
                        {
                            if (@Model.Calendar[row, col] != 0)
                            {
                                <td><input type="radio" name="Day" value="@Model.Calendar[row, col]" />@Model.Calendar[row, col]</td>
                            }
                            else
                            {
                                <td>-</td>
                            }
                        }
                    </tr>
                }           
            </table>
            <p class="error past_date">@Model.ErrorMessage</p>
            <input type="submit" name="Go" value="BookDate" class="bookDatebutton" />
            @if (Model.TextDate != null)
            {
                <div class="appointment">
                    <p>@Model.TextDate</p>
                    <p>Number Of Players</p>
                    <input type="number" name="PlayerNumber" min="0" max="4"  />
                    <input type="submit" name="Go" value="PNumber" class="playerbutton" />
                    <p>Time Slots According to @Model.Member.MembershipType Privileges</p>
                    @if (Model.Member.MembershipType == "Gold")
                    {
                        <select id="teeTimeSelect" name="TeeTime">
                            <option value="07:00">7:00 AM</option>
                            <option value="07:08">7:08 AM</option>
                            <option value="07:16">7:16 AM</option>
                            <option value="07:24">7:24 AM</option>
                            <option value="07:32">7:32 AM</option>
                            <option value="07:40">7:40 AM</option>
                            <option value="07:48">7:48 AM</option>
                            <option value="08:00">8:00 AM</option>
                            <option value="08:08">8:08 AM</option>
                            <option value="08:16">8:16 AM</option>
                            <option value="08:24">8:24 AM</option>
                            <option value="08:32">8:32 AM</option>
                            <option value="08:40">8:40 AM</option>
                            <option value="08:48">8:48 AM</option>
                            <option value="09:00">9:00 AM</option>
                            <option value="09:08">9:08 AM</option>
                            <option value="09:16">9:16 AM</option>
                            <option value="09:24">9:24 AM</option>
                            <option value="09:32">9:32 AM</option>
                            <option value="09:40">9:40 AM</option>
                            <option value="09:48">9:48 AM</option>
                            <option value="10:00">10:00 AM</option>
                            <option value="10:08">10:08 AM</option>
                            <option value="10:16">10:16 AM</option>
                            <option value="10:24">10:24 AM</option>
                            <option value="10:32">10:32 AM</option>
                            <option value="10:40">10:40 AM</option>
                            <option value="10:48">10:48 AM</option>
                            <option value="11:00">11:00 AM</option>
                            <option value="11:08">11:08 AM</option>
                            <option value="11:16">11:16 AM</option>
                            <option value="11:24">11:24 AM</option>
                            <option value="11:32">11:32 AM</option>
                            <option value="11:40">11:40 AM</option>
                            <option value="11:48">11:48 AM</option>
                            <option value="12:00">12:00 PM</option>
                            <option value="12:08">12:08 PM</option>
                            <option value="12:16">12:16 PM</option>
                            <option value="12:24">12:24 PM</option>
                            <option value="12:32">12:32 PM</option>
                            <option value="12:40">12:40 PM</option>
                            <option value="12:48">12:48 PM</option>
                            <option value="13:00">1:00 PM</option>
                            <option value="13:08">1:08 PM</option>
                            <option value="13:16">1:16 PM</option>
                            <option value="13:24">1:24 PM</option>
                            <option value="13:32">1:32 PM</option>
                            <option value="13:40">1:40 PM</option>
                            <option value="13:48">1:48 PM</option>
                            <option value="14:00">2:00 PM</option>
                            <option value="14:08">2:08 PM</option>
                            <option value="14:16">2:16 PM</option>
                            <option value="14:24">2:24 PM</option>
                            <option value="14:32">2:32 PM</option>
                            <option value="14:40">2:40 PM</option>
                            <option value="14:48">2:48 PM</option>
                            <option value="15:00">3:00 PM</option>
                            <option value="17:30">5:30 PM</option>
                            <option value="17:38">5:38 PM</option>
                            <option value="17:46">5:46 PM</option>
                            <option value="17:54">5:54 PM</option>
                            <option value="18:02">6:02 PM</option>
                            <option value="18:10">6:10 PM</option>
                            <option value="18:18">6:18 PM</option>
                            <option value="18:26">6:26 PM</option>
                            <option value="18:34">6:34 PM</option>
                            <option value="18:42">6:42 PM</option>
                            <option value="18:50">6:50 PM</option>
                            <option value="18:58">6:58 PM</option>
                            <option value="19:00">7:00 PM</option>
                        </select>



                    }
                    @if (Model.Member.MembershipType == "Silver")
                    {       
                        <select id="teeTimeSelect" name="TeeTime">
                            @* Before 3pm *@
                            @for (int hour = 7; hour < 15; hour++)
                            {
                                for (int minute = 7; minute < 60; minute += 8)
                                {
                                    if (hour < 12)
                                    {
                                        <option value="@($"{hour:D2}:{minute:D2}")">@($"{hour:D2}:{minute:D2}AM")</option>
                                    }
                                    if (hour > 12)
                                    {
                                        <option value="@($"{hour:D2}:{minute:D2}")">@($"{hour:D2}:{minute:D2}PM")</option>
                                    }
                                   
                                }
                            }
                            @* After 5:30pm *@
                            @for (int hour = 17; hour < 20; hour++)
                            {
                                for (int minute = 30; minute < 60; minute += 8)
                                {
                                    <option value="@($"{hour:D2}:{minute:D2}")">@($"{hour:D2}:{minute:D2}PM")</option>
                                }
                            }
                        </select>

                    }
                    @if (Model.Member.MembershipType == "Bronze")
                    {
                        <select id="teeTimeSelect" name="TeeTime">
                            @* Before 3pm *@ 
                            <option value="07:00">7:00 AM</option>
                            <option value="07:15">7:15 AM</option>
                            <option value="07:30">7:30 AM</option>
                            <option value="07:45">7:45 AM</option>
                            <option value="08:00">8:00 AM</option>
                            <option value="08:15">8:15 AM</option>
                            <option value="08:30">8:30 AM</option>
                            <option value="08:45">8:45 AM</option>
                            <option value="09:00">9:00 AM</option>
                            <option value="09:15">9:15 AM</option>
                            <option value="09:30">9:30 AM</option>
                            <option value="09:45">9:45 AM</option>
                            <option value="10:00">10:00 AM</option>
                            <option value="10:15">10:15 AM</option>
                            <option value="10:30">10:30 AM</option>
                            <option value="10:45">10:45 AM</option>
                            <option value="11:00">11:00 AM</option>
                            <option value="11:15">11:15 AM</option>
                            <option value="11:30">11:30 AM</option>
                            <option value="11:45">11:45 AM</option>
                            <option value="12:00">12:00 PM</option>
                            <option value="12:15">12:15 PM</option>
                            <option value="12:30">12:30 PM</option>
                            <option value="12:45">12:45 PM</option>
                            <option value="13:00">1:00 PM</option>
                            <option value="13:15">1:15 PM</option>
                            <option value="13:30">1:30 PM</option>
                            <option value="13:45">1:45 PM</option>
                            <option value="14:00">2:00 PM</option>
                            <option value="14:15">2:15 PM</option>
                            <option value="14:30">2:30 PM</option>
                            <option value="14:45">2:45 PM</option>
                            <option value="15:00">3:00 PM</option>
                            @*  After 6:00pm *@
                            <option value="18:15">6:15 PM</option>
                            <option value="18:30">6:30 PM</option>
                            <option value="18:45">6:45 PM</option>
                            <option value="19:00">7:00 PM</option>
                            <option value="19:15">7:15 PM</option>
                            <option value="19:30">7:30 PM</option>
                            <option value="19:45">7:45 PM</option>
                            <option value="20:00">8:00 PM</option>
                        </select>
                    }

                    @if (Model.PlayerNumber == 1)
                    {
                         <input type="number" name="Player1Id" placeholder="PlayerID" />
                    }
                    @if (Model.PlayerNumber == 2)
                    {
                        <input type="number" name="Player1Id" placeholder="PlayerID" />
                        <input type="number" name="Player2Id" placeholder="PlayerID" />
                    }
                    @if (Model.PlayerNumber == 3)
                    {
                        <input type="number" name="Player1Id" placeholder="PlayerID" />
                        <input type="number" name="Player2Id" placeholder="PlayerID" />
                        <input type="number" name="Player3Id" placeholder="PlayerID" />
                    }
                    @if (Model.PlayerNumber == 4)
                    {
                        <input type="number" name="Player1Id" placeholder="PlayerID" />
                        <input type="number" name="Player2Id" placeholder="PlayerID" />
                        <input type="number" name="Player3Id" placeholder="PlayerID" />
                        <input type="number" name="Player4Id" placeholder="PlayerID" />
                    }

                    @if (Model.PlayerNumber > 0)
                    {
                        foreach (string message in Model.ErrorList)
                        {
                            <p class="error">@message</p>
                        }
                        <p>@Model.SuccessMessage</p>
                        <input type="submit" name="Go" value="BookTime" class="playerbutton" />
                    }                  
                </div>             
            }
        </form>    
    </div>
</div>
