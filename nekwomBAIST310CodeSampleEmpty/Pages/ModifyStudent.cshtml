@page
@model nekwomBAIST310CodeSampleEmpty.Pages.ModifyStudentModel
@{
}
<form name="ModifyStudent" method="post" >
    <table>
        <tr>
            <td>@Model.Message</td>
        </tr>
        <tr>
            <td>Student ID</td>
            <td>
                <input type="text" name="ID" />
                @Html.ValidationMessage("IdInput");
            </td>
        </tr>
        <tr>
            <td>
                <input type="submit" name="Submit" value="Getstudents" />
            </td>
        </tr>
        <tr>
            <td>First Name</td>
            <td>
                <input type="text" name="Firstname" value="@Model.Firstname"/>
                @Html.ValidationMessage("FirstnameInput");
            </td>
        </tr>
        <tr>
            <td>Last Name</td>
            <td>
                <input type="text" name="Lastname" value="@Model.Lastname"/>
                @Html.ValidationMessage("LastnameInput");
            </td>
        </tr>
        <tr>
            <td>Email</td>
            <td>
                <input type="text" name="Email" value="@Model.Email"/>
                @Html.ValidationMessage("EmailInput");
            </td>
        </tr>   
        <tr>
            <td>
                <input type="submit" name="Submit" value="ModifyStudent" />
            </td>
        </tr>
        <tr>
            <td>@Model.Student.FirstName</td>
            <td>@Model.Student.LastName</td>
            <td>@Model.Student.Email</td>
        </tr>
    </table>
</form>
