@page
@model BAIST33150ConsoleAppEmpty.Pages.DynamicFormControlPageModel
@{
}
<!DOCTYPE html>
<html>
    <head>
        <meta  charset="utf-8" />
        <title>Dynamic Page with Form Controls</title>
    </head>
    <body>
        <form name="DynamicSampleForm" method="post">
            <table>
                <tr>
                    <td>Field:</td>
                    <td>
                        <input type="text" name="AField"/>
                    </td>
                </tr>
                <tr>
                    <td>Collection Display</td>
                    <td>
                        <select name="ACollection" size="2">
                        @foreach (var SampleObject in Model.SampleObjectCollection)
                        {
                            <option value="@SampleObject.FirstProperty">@SampleObject.SecondProperty</option>
                            <option value="@SampleObject.FirstProperty">@SampleObject.SecondProperty</option>
                            <option value="@SampleObject.FirstProperty">@SampleObject.SecondProperty</option>
                        }

                        </select>
                    </td>
                </tr>
                <tr>
                    <td>
                    <input type="submit" name="Submit" value="Submit" />
                    </td>
                </tr>
            </table>
        </form>
        @Model.Message
    </body>
</html>