@page
@model BAIST33150ConsoleAppEmpty.Pages.ValidationClientServerModel
@{
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" type="text/css" href="css/styles.css" /> 
        <title>Validation Client Server</title>
        <script type="text/javascript">
            function isFormValid(aForm) { 
                var isValid = false
                var aValue = aForm.InputField.value;
                var length = aValue.length

                if (length > 0 && length <= 5) {
                    isValid = true

                }
                else {
                    document.getElementById('error').innerHTML += "<p> Your Value is Invalid </p>"
                    alert('Your Value is Invalid')
                }
                return isValid
            }
        // (window.document.SampleForm)
        // return true
        </script>
    </head>
    <body>
    <form name="SampleForm" method="post" onsubmit="return isFormValid(window.document.SampleForm)">
            <table>
                <tr>
                    <td>Input Field</td>
                    <td>
                        <input type="text" name="InputField" value="@Model.InputField"/>
                        @Html.ValidationMessage("InputField")
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" name="Submit" value="Submit" />
                    </td>
                </tr>
                <tr>
                    <td>
                    <div class="alert" id="error">
                        </div>
                        @Model.Message;
                    </td>         
                </tr>           
            </table>
        </form>
    </body>
</html>