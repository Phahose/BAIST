@page
@model ABCHardWare.Pages.DeleteCustomerModel
@{
}
<form name="DeleteCustomer" method="post">
    <h2>Delete Customer</h2>
    <table>
        <tr class="updateCustomertr">
            <td>
                <input type="text" name="FirstName" required placeholder="First Name" value="@Model.FirstName" />
                @Html.ValidationMessage("FirstNameInput")
                <input type="text" name="LastName" required placeholder="Last Name" value="@Model.LastName" />
                @Html.ValidationMessage("LastNameInput")

            </td>
        </tr>
        <input type="text" name="CustomerID" placeholder="ID" value="@Model.CustomerID" hidden />
        <tr>
            <td>
                <input type="submit" name="Submit" value="FindCustomer" class="sub" />
            </td>
        </tr>       
    </table>

    @if (Model.Customers.Count > 0)
    {
        <div class="scroll">
            <table class="found scroll">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Province</th>
                        <th>PostalCode</th>
                        <th>CustomerID</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="address">Select Customer By CustomerID</td>
                        <td>
                            <input type="text" name="SelectedCustomer" placeholder="CustomerID" />
                        </td>
                        <td>
                            <input type="submit" name="Submit" value="Delete" class="deleteB" />
                        </td>
                    </tr>
                        @foreach (var item in Model.Customers)
                        {
                            <tr>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td class="address">@item.Address</td>
                                <td>@item.City</td>
                                <td>@item.Province</td>
                                <td>@item.PostalCode</td>
                                <td>@item.CustomerID</td>

                            </tr>
                        }    
                </tbody>

            </table>
        </div>
    }
</form>

<div class="message">
    <p>@Model.Message</p>
</div>